{
  "name": "estebanquito-backend",
  "version": "1.0.0",
  "main": "index.js",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:auth": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage __tests__/controllers/controller.auth.test.js",
    "test:report": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage __tests__/controllers/controller.report.test.js",
    "test:loan": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage __tests__/controllers/controller.loan.test.js",
    "test:transaction": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage __tests__/controllers/controller.transaction.test.js",
    "test:user": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage __tests__/controllers/controller.user.test.js",
    "dev": "nodemon src/index.js"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "",
  "dependencies": {
    "bcrypt": "^5.1.1",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "jsonwebtoken": "^9.0.2",
    "morgan": "^1.10.0",
    "mysql2": "^3.11.3",
    "node-cron": "^3.0.3",
    "nodeman": "^1.1.2",
    "nodemon": "^3.1.7"
  },
  "devDependencies": {
    "jest": "^29.7.0",
    "jest-junit": "^16.0.0"
  },
  "jest": {
    "reporters": [
      "default",
      [
        "jest-junit",
        {
          "outputDirectory": "test-results/junit",
          "outputName": "junit.xml"
        }
      ]
    ],
    "coverageDirectory": "coverage",
    "coverageProvider": "v8",
    "collectCoverageFrom": [
      "controllers/**/*.{js,jsx}",
      "middleware/**/*.{js,jsx}",
      "routes/**/*.{js,jsx}",
      "!**/node_modules/**",
      "!**/vendor/**",
      "!**/__tests__/**",
      "!**/coverage/**",
      "!index.js",
      "!config.js",
      "!convert-junit-to-sonar.js",
      "!prepare-sonar.sh",
      "!database/db.js"
    ],
    "coverageReporters": [
      "text",
      "lcov"
    ],
    "transform": {},
    "moduleNameMapper": {
      "^(\\.{1,2}/.*)\\.js$": "$1"
    }
  }
}
